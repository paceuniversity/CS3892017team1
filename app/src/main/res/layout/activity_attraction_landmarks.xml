<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/mainbackgroundb"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.jacksonhoang.citygoer.MainActivity">

    <include
        android:id="@+id/app_bar"
        layout="@layout/app_bar"
        />

    <ScrollView
        android:id="@+id/scrollView"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:paddingTop="100dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:weightSum="1">

            <TextView
                android:id="@+id/titleAttractions"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:background="#80d9d6d6"
                android:text="Museums"
                android:textAlignment="center"
                android:textSize="30dp" />



            <Button
                android:id="@+id/forbiddenCity"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_marginTop="69dp"
                android:background="#80cac7c7"
                android:text="Forbidden City"
                android:textColor="#ff8800"
                android:textSize="20dp" />
            <ImageView
                android:id="@+id/imageView"
                android:layout_width="199dp"
                android:layout_height="118dp"
                android:layout_gravity="center"
                app:srcCompat="@drawable/forbiddencity1" />

            <Button
                android:id="@+id/greatWall"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_marginTop="69dp"
                android:background="#80cac7c7"
                android:text="Great Wall of China"
                android:textColor="#ff8800"
                android:textSize="20dp" />
            <ImageView
                android:id="@+id/imageView2"
                android:layout_width="199dp"
                android:layout_height="118dp"
                android:layout_gravity="center"
                app:srcCompat="@drawable/greatwallofchina1" />


            <Button
                android:id="@+id/templeOfHeaven"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_marginTop="69dp"
                android:background="#80cac7c7"
                android:text="Temple of Heaven"
                android:textColor="#ff8800"
                android:textSize="20dp" />
            <ImageView
                android:id="@+id/imageView3"
                android:layout_width="199dp"
                android:layout_height="118dp"
                android:layout_gravity="center"
                app:srcCompat="@drawable/templeofheaven" />

            <Button
                android:id="@+id/mingTombs"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_marginTop="69dp"
                android:background="#80cac7c7"
                android:text="Ming Tombs"
                android:textColor="#ff8800"
                android:textSize="20dp" />
            <ImageView
                android:id="@+id/imageView4"
                android:layout_width="199dp"
                android:layout_height="118dp"
                android:layout_gravity="center"
                app:srcCompat="@drawable/mingtombs" />

            <Button
                android:id="@+id/summerPalace"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_marginTop="69dp"
                android:background="#80cac7c7"
                android:text="Summer Palace"
                android:textColor="#ff8800"
                android:textSize="20dp" />
            <ImageView
                android:id="@+id/imageView5"
                android:layout_width="199dp"
                android:layout_height="118dp"
                android:layout_gravity="center"
                app:srcCompat="@drawable/summerpalace" />

        </LinearLayout>
    </ScrollView>

</RelativeLayout>

